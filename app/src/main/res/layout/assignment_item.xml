<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    android:elevation="4dp"
    android:radius="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#2b2d42"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:textColor="@color/white"
            android:id="@+id/textViewAssignmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment Title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Subject -->
        <TextView
            android:textColor="@color/white"

            android:id="@+id/textViewAssignmentSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject: Math"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Due Date -->
        <TextView
            android:textColor="@color/white"

            android:id="@+id/textViewAssignmentDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date: 2025-06-10"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <!-- Description -->
        <TextView
            android:textColor="@color/white"

            android:id="@+id/textViewAssignmentDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description goes here"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Attachment URL -->
        <TextView
            android:textColor="@color/white"

            android:id="@+id/textViewAssignmentFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File: http://example.com/file.pdf"
            android:textSize="13sp"
            android:autoLink="web"
            android:layout_marginTop="4dp" />

        <!-- View Replies Button -->
        <Button
            android:id="@+id/buttonViewReplies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Replies"
            android:textColor="#000"
            android:backgroundTint="#8d99ae"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="20dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
