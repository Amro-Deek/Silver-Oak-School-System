<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#8d99ae"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Schedule"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Student ID -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Student ID"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />
        <Spinner
            android:id="@+id/inputStudentId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext_white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Subject ID -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Subject"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />
        <Spinner
            android:id="@+id/inputSubjectId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext_white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Day -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Day"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />
        <Spinner
            android:id="@+id/inputDay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext_white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Start Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Time"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/inputStartTime"
            android:hint="Start Time (HH:MM:SS)"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext_white"

            android:drawablePadding="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:inputType="time"
            android:layout_marginBottom="12dp" />

        <!-- End Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Time"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/inputEndTime"
            android:hint="End Time (HH:MM:SS)"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext_white"

            android:drawablePadding="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:inputType="time"
            android:layout_marginBottom="12dp" />

        <!-- Location -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classroom Location"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/inputLocation"
            android:hint="Location"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext_white"

            android:drawablePadding="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:layout_marginBottom="16dp" />

        <!-- Button -->
        <Button
            android:id="@+id/btnCreateSchedule"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Create Schedule"
            android:backgroundTint="#2b2d42"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
